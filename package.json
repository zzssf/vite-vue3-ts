{
  "name": "vite-vue3-ts",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:stage": "vue-tsc --noEmit && vite build --mode staging",
    "build:prod": "vue-tsc --noEmit && vite build  --mode production",
    "preview:stage": "pnpm build:stage && vite preview",
    "preview:prod": "pnpm build:prod && vite preview",
    "lint:eslint": "eslint --cache --max-warnings 0 \"src/**/*.{vue,js,jsx,ts,tsx,json,html,md}\" --fix",
    "lint:prettier": "prettier --write \"src/**/*.{vue,js,jsx,ts,tsx,json,html,md}\"",
    "lint": "pnpm lint:eslint && pnpm lint:prettier",
    "lint:style": "stylelint \"src/**/*.{vue,html,css,scss,less}\"",
    "lint:style:fix": "stylelint \"src/**/*.{vue,html,css,scss,less}\" --fix",
    "prepare": "husky install",
    "commitlint": "commitlint --config commitlint.config.cjs -e -V"
  },
  "dependencies": {
    "@element-plus/icons-vue": "2.3.1",
    "axios": "1.6.8",
    "element-plus": "2.6.2",
    "lodash-es": "4.17.21",
    "normalize.css": "8.0.1",
    "pinia": "2.1.7",
    "vue": "^3.4.21",
    "vue-router": "4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/lodash-es": "4.17.12",
    "@typescript-eslint/eslint-plugin": "7.3.1",
    "@typescript-eslint/parser": "7.3.1",
    "@vitejs/plugin-vue": "5.0.4",
    "consola": "^3.2.3",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-vue": "9.23.0",
    "husky": "^8.0.0",
    "less": "^4.2.0",
    "lint-staged": "^15.2.6",
    "mockjs": "1.1.0",
    "postcss-html": "^1.7.0",
    "postcss-less": "^6.0.0",
    "postcss-scss": "^4.0.9",
    "prettier": "3.2.5",
    "sass": "^1.77.5",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-config-standard-vue": "^1.0.0",
    "stylelint-order": "^6.0.4",
    "typescript": "5.4.3",
    "vite": "5.2.6",
    "vite-plugin-mock": "2.9.6",
    "vite-plugin-style-import": "^2.0.0",
    "vite-plugin-stylelint": "^5.3.1",
    "vue-eslint-parser": "9.4.2",
    "vue-tsc": "2.0.7"
  },
  "lint-staged": {
    "**/*.{vue,js,jsx,ts,tsx,json,html,md}": "pnpm run lint",
    "**/*.{vue,html,css,scss,less}": "pnpm run lint:style:fix"
  }
}
